{
    "$schema": "https://design-tokens.github.io/community-group/format/",
    "brand": "Aura Bloom Medspa",
    "version": "1.0.0",
    "description": "SCSS variables for use in Sass/SCSS projects",
    "primitives": {
        "navy": "#0A192F",
        "charcoal": "#121212",
        "gold": "#C5A059",
        "cream": "#FDFBF7",
        "accent": "#E5D5C0",
        "teal": "#27899D",
        "white": "#FFFFFF",
        "glass-cream": "#FBFCF7",
        "glass-peach": "#F49E94"
    },
    "backgrounds": {
        "primary": "#FDFBF7",
        "secondary": "#FFFFFF",
        "dark": "#0A192F",
        "footer": "#121212",
        "navbar-solid": "#E5EDF1",
        "announcement": "#F6DFD6"
    },
    "fonts": {
        "serif": "'Cormorant Garamond', serif",
        "sans": "'Inter', sans-serif"
    },
    "font-sizes": {
        "3xs": "10px",
        "2xs": "11px",
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "30px",
        "4xl": "36px",
        "5xl": "48px",
        "6xl": "60px",
        "7xl": "72px",
        "8xl": "96px"
    },
    "spacing": {
        "section-sm": "96px",
        "section-lg": "128px",
        "container-max": "1280px",
        "container-narrow": "1024px",
        "navbar-offset": "130px"
    },
    "radii": {
        "sm": "2px",
        "md": "8px",
        "lg": "12px",
        "xl": "16px",
        "2xl": "24px",
        "3xl": "48px",
        "full": "9999px"
    },
    "shadows": {
        "lg": "0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -4px rgba(0,0,0,0.1)",
        "xl": "0 20px 25px -5px rgba(0,0,0,0.1), 0 8px 10px -6px rgba(0,0,0,0.1)",
        "2xl": "0 25px 50px -12px rgba(0,0,0,0.25)"
    },
    "durations": {
        "fast": "150ms",
        "normal": "300ms",
        "medium": "500ms",
        "slow": "700ms",
        "hero": "800ms",
        "image": "1000ms"
    }
}